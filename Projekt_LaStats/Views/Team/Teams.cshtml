@model IEnumerable<Projekt_LaStats.Models.Team>

@{
    ViewData["Title"] = "Teams";
}

<h1>Teams</h1>

<p>
    <a asp-action="AddTeam">Create New</a>
</p>
<h1>Teams</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa drużyny
                
            </th>
            <th>Liga</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <a asp-action="PlayersInTeam" asp-controller="Player" asp-route-id="@item.Id">
                @Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.League.Name)
            </td>
            <td>
                <a asp-action="EditTeam" asp-route-id="@item.Id">Edit</a> |
                    <form method="POST" asp-action="DeleteTeam" asp-route-id="@item.Id">
                    <button type="submit" value="@item.Id">Delete</button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
